<header class="admin-page-header">
  <div>
    <h1>Users</h1>
    <p class="admin-page-subtitle">Manage customer and admin accounts</p>
  </div>
</header>

<div class="admin-filters">
  <%= link_to "All", admin_users_path, class: "filter-btn #{params[:role].blank? ? 'active' : ''}" %>
  <%= link_to "Customers", admin_users_path(role: "customer"), class: "filter-btn #{params[:role] == 'customer' ? 'active' : ''}" %>
  <%= link_to "Admins", admin_users_path(role: "admin"), class: "filter-btn #{params[:role] == 'admin' ? 'active' : ''}" %>
</div>

<% if @users.any? %>
  <div class="admin-table-container">
    <table class="admin-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Joined</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><strong><%= link_to user.full_name, admin_user_path(user) %></strong></td>
            <td><%= user.email %></td>
            <td>
              <span class="badge badge--<%= user.role %>"><%= user.role.humanize %></span>
            </td>
            <td><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td class="table-actions">
              <%= link_to "View", admin_user_path(user), class: "action-link" %>
              <%= link_to "Edit", edit_admin_user_path(user), class: "action-link" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="empty-state">
    <span class="empty-state-icon">ðŸ‘¥</span>
    <h3>No users found</h3>
  </div>
<% end %>
