<header class="admin-page-header">
  <div>
    <h1><%= @user.full_name %></h1>
    <span class="badge badge--<%= @user.role %>"><%= @user.role.humanize %></span>
  </div>
  <div class="header-actions">
    <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn--primary" %>
    <%= link_to "Back", admin_users_path, class: "btn btn--ghost" %>
  </div>
</header>

<div class="admin-detail-grid">
  <div class="admin-detail-main">
    <section class="admin-section">
      <h3>Commissions (<%= @commissions.count %>)</h3>
      
      <% if @commissions.any? %>
        <div class="admin-list">
          <% @commissions.each do |commission| %>
            <div class="admin-list-item">
              <div class="list-item-main">
                <%= link_to commission.title, admin_commission_path(commission) %>
              </div>
              <div class="list-item-side">
                <span class="status-badge <%= commission.status_color_class %>">
                  <%= commission.status_label %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="empty-message">No commissions yet.</p>
      <% end %>
    </section>
  </div>

  <aside class="admin-detail-sidebar">
    <div class="info-card">
      <h3>Contact Info</h3>
      <dl class="info-list">
        <div class="info-item">
          <dt>Email</dt>
          <dd><%= mail_to @user.email %></dd>
        </div>
        <% if @user.phone.present? %>
          <div class="info-item">
            <dt>Phone</dt>
            <dd><%= @user.phone %></dd>
          </div>
        <% end %>
        <div class="info-item">
          <dt>Joined</dt>
          <dd><%= @user.created_at.strftime("%B %d, %Y") %></dd>
        </div>
        <div class="info-item">
          <dt>Last Sign In</dt>
          <dd><%= @user.last_sign_in_at&.strftime("%B %d, %Y") || "Never" %></dd>
        </div>
      </dl>
    </div>
  </aside>
</div>
