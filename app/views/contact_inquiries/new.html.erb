<% content_for :head do %>
  <%= tag.link rel: "canonical", href: contact_url %>
<% end %>

<section class="page-header">
  <div class="container">
    <h1 class="page-title">Get in Touch</h1>
    <p class="page-subtitle">Have a question or want to discuss a custom piece? We'd love to hear from you.</p>
  </div>
</section>

<section class="section">
  <div class="container container--narrow">
    <div class="contact-intro">
      <p>
        Whether you're interested in commissioning a custom stained glass piece,
        have questions about our work, or just want to say helloâ€”fill out the form
        below and we'll get back to you within 1-2 business days.
      </p>
    </div>

    <%= form_with model: @contact_inquiry, url: contact_inquiries_path, class: "contact-form" do |f| %>
      <% if @contact_inquiry.errors.any? %>
        <div class="form-errors" role="alert">
          <h4 class="form-errors-title">Please correct the following:</h4>
          <ul class="form-errors-list">
            <% @contact_inquiry.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-input", placeholder: "Your name", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-input", placeholder: "your@email.com", required: true %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :phone, "Phone (optional)", class: "form-label" %>
          <%= f.telephone_field :phone, class: "form-input", placeholder: "Your phone number" %>
        </div>

        <div class="form-group">
          <%= f.label :subject, "Subject (optional)", class: "form-label" %>
          <%= f.text_field :subject, class: "form-input", placeholder: "What's this about?" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :message, class: "form-label" %>
        <%= f.text_area :message, class: "form-textarea", placeholder: "Tell us about your project, question, or idea...", rows: 6, required: true %>
        <span class="form-hint">Please be as detailed as possible about your vision.</span>
      </div>

      <div class="form-actions">
        <%= f.submit "Send Message", class: "btn btn--primary btn--lg" %>
      </div>
    <% end %>
  </div>
</section>
