<% set_meta_tags title: "Account Settings" %>

<div class="auth-page">
  <div class="auth-container auth-container--wide">
    <div class="auth-header">
      <span class="auth-icon">â—‡</span>
      <h1 class="auth-title">Account Settings</h1>
      <p class="auth-subtitle">Update your profile information</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-section">
        <h3 class="form-section-title">Profile Information</h3>
        
        <div class="form-row">
          <div class="form-group">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, autocomplete: "given-name", class: "form-input" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, autocomplete: "family-name", class: "form-input" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <span class="form-hint form-hint--warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :phone, class: "form-label" %>
          <%= f.telephone_field :phone, autocomplete: "tel", class: "form-input" %>
        </div>
      </div>

      <div class="form-section">
        <h3 class="form-section-title">Change Password</h3>
        <p class="form-section-hint">Leave blank if you don't want to change it</p>

        <div class="form-group">
          <%= f.label :password, "New password", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "Leave blank to keep current" %>
          <% if @minimum_password_length %>
            <span class="form-hint"><%= @minimum_password_length %> characters minimum</span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
        </div>
      </div>

      <div class="form-section">
        <h3 class="form-section-title">Confirm Changes</h3>
        
        <div class="form-group">
          <%= f.label :current_password, class: "form-label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input", placeholder: "Required to save changes" %>
          <span class="form-hint">We need your current password to confirm changes</span>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Update Account", class: "btn btn--primary btn--lg" %>
        <%= link_to "Cancel", portal_dashboard_path, class: "btn btn--ghost btn--lg" %>
      </div>
    <% end %>

    <div class="auth-danger-zone">
      <h3>Danger Zone</h3>
      <p>Once you delete your account, there is no going back.</p>
      <%= button_to "Delete My Account", registration_path(resource_name), 
          method: :delete, 
          class: "btn btn--danger",
          data: { turbo_confirm: "Are you sure you want to delete your account? This cannot be undone." } %>
    </div>
  </div>
</div>
