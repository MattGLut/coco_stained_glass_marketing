<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  
  <url>
    <loc><%= root_url %></loc>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  <url>
    <loc><%= about_url %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  
  <url>
    <loc><%= contact_url %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <url>
    <loc><%= works_url %></loc>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <% @categories.each do |category| %>
  <url>
    <loc><%= works_url(category: category.id) %></loc>
    <lastmod><%= category.updated_at.iso8601 %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>
  <% end %>

  <% @works.each do |work| %>
  <url>
    <loc><%= work_url(work) %></loc>
    <lastmod><%= work.updated_at.iso8601 %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    <% work.images.each do |image| %>
    <image:image>
      <image:loc><%= rails_blob_url(image) %></image:loc>
      <image:title><%= work.title %></image:title>
    </image:image>
    <% end %>
  </url>
  <% end %>
</urlset>
