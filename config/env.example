# =============================================================================
# Stained Glass Marketing Site - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!
# =============================================================================

# =============================================================================
# Rails Core
# =============================================================================
RAILS_ENV=development
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# Application host (used for mailer URLs, etc.)
APP_HOST=localhost:3000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# For local development, Rails will use the values in database.yml
# In production, set DATABASE_URL to override
DATABASE_URL=postgres://user:password@localhost/marketing_production
MARKETING_DATABASE_PASSWORD=your_db_password

# =============================================================================
# AWS S3 (File Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET=stained-glass-production

# =============================================================================
# SendGrid (Email)
# =============================================================================
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_DOMAIN=yourdomain.com

# Default sender email addresses
DEFAULT_FROM_EMAIL=hello@yourdomain.com
ADMIN_EMAIL=coco@yourdomain.com

# =============================================================================
# Rollbar (Error Tracking)
# =============================================================================
ROLLBAR_ACCESS_TOKEN=your_rollbar_token
ROLLBAR_ENV=production

# =============================================================================
# New Relic (APM)
# =============================================================================
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
NEW_RELIC_APP_NAME=Stained Glass Marketing

# =============================================================================
# Devise (Authentication)
# =============================================================================
# Optional: Override default Devise secret key
# DEVISE_SECRET_KEY=your_devise_secret_key
